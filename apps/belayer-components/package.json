    "build:cjs": "tsc --module CommonJS --outDir dist/cjs",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.js src/**/*.tsx src/**/*.ts",
    "lint:fix": "eslint src/**/*.js --fix"
  },
